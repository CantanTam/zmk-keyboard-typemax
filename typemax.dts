/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/gpio/gpio.h> 
#include <dt-bindings/zmk/matrix_transform.h>
#include <zephyr/dt-bindings/led/led.h>


/* 测试 zmk behavior 用*/ 
//#include "control_gpio_behavior.dtsi"

/ {
    model = "TypeMax Keyboard";
	compatible = "typemax", "nordic,nrf52840-qiaa", "nordic,nrf52840";

	chosen {
		//zephyr,console = &uart0;
		//zephyr,shell-uart = &uart0;
		//zephyr,uart-mcumgr = &uart0;
		//zephyr,bt-mon-uart = &uart0;
		//zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
        zephyr,code-partition = &slot0_partition;
        zmk,kscan = &kscan;
        zmk,matrix-transform = &transform;
        zmk,battery = &vbatt;
        zephyr,settings-partition = &storage_partition;
        //ws2812
        zmk,underglow = &led_strip;
	};

    transform: transform {
        compatible = "zmk,matrix-transform";
        rows = <10>;
        columns = <9>;

        map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8)
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8)
        RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8)
        RC(5,0) RC(5,1) RC(5,2) RC(5,3) RC(5,4) RC(5,5) RC(5,6) RC(5,7) RC(5,8)
        RC(6,0) RC(6,1) RC(6,2) RC(6,3) RC(6,4) RC(6,5) RC(6,6) RC(6,7) RC(6,8)
        RC(7,0) RC(7,1) RC(7,2) RC(7,3) RC(7,4) RC(7,5) RC(7,6) RC(7,7) RC(7,8)
        RC(8,0) RC(8,1) RC(8,2) RC(8,3) RC(8,4) RC(8,5) RC(8,6) RC(8,7) RC(8,8)
        RC(9,0) RC(9,1) RC(9,2) RC(9,3) RC(9,4) RC(9,5) RC(9,6) RC(9,7) RC(9,8)
        >;

    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        wakeup-source;

        // todo
        row-gpios
            = <&gpio0 12 GPIO_ACTIVE_HIGH>
            , <&gpio1 9 GPIO_ACTIVE_HIGH> 
            , <&gpio0 8 GPIO_ACTIVE_HIGH>
            , <&gpio0 6 GPIO_ACTIVE_HIGH>
            , <&gpio0 4 GPIO_ACTIVE_HIGH>
            , <&gpio0 26 GPIO_ACTIVE_HIGH>
            , <&gpio0 11 GPIO_ACTIVE_HIGH>
            , <&gpio1 8 GPIO_ACTIVE_HIGH>
            , <&gpio0 7 GPIO_ACTIVE_HIGH>
            , <&gpio0 27 GPIO_ACTIVE_HIGH>
        ;
        col-gpios
            = <&gpio0 23 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio1 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 25 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
        ;
    };


    vbatt: vbatt {
        compatible = "zmk,battery-voltage-divider";
        // 我使用的 P0.03 对应 AIN1 通道，所以这里是 &adc 1
        io-channels = <&adc 1>;
        output-ohms = <100000>;
        full-ohms = <200000>;
        status = "okay";
    };

    // 这里是CAPS_LOCK 和 切换层使用的 led 行为
    led: led {
        compatible = "zmk,behavior-led";
        #binding-cells = <2>; 
        // 索引 0 对应 GRE (P0.14), 索引 1 对应 RED (P0.16)
        gpios = <&gpio0 14 GPIO_ACTIVE_LOW>, <&gpio0 16 GPIO_ACTIVE_LOW>;
        status = "okay";
    };

    // 这里是切换不同蓝牙设备使用的 led 行为
    blink: blink {
        compatible = "zmk,behavior-blink";
        #binding-cells = <2>; 
        // 引用相同的硬件资源
        gpios = <&gpio0 14 GPIO_ACTIVE_LOW>, <&gpio0 16 GPIO_ACTIVE_LOW>;
        status = "okay";
    };

    reclayer: record_layer {
        compatible = "zmk,behavior-reclayer";
        #binding-cells = <1>;
    };

    togtouch: togtouch {
        compatible = "zmk,behavior-togtouch";
        #binding-cells = <0>;
        status = "okay";
    };


};

&uicr {
    nfct-pins-as-gpios;
    gpio-as-nreset;
};

&adc {
	status ="okay";
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
    status = "okay";
};

&usbd {
    status = "okay";
};

&pinctrl {

    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 1, 2)>,
                <NRF_PSEL(TWIM_SCL, 1, 4)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 1, 2)>,
                <NRF_PSEL(TWIM_SCL, 1, 4)>;
            //low-power-enable;
            bias-disable;
        };
    };

    // ws2812 
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 21)>;
            nordic,drive-mode = <NRF_DRIVE_S0H1>; 
            bias-disable;
        };
    };

    // ws2812
    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 0, 21)>;
            nordic,drive-mode = <NRF_DRIVE_S0H1>; 
            bias-disable;
        };
    };

};

&i2c0 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
    clock-frequency = <I2C_BITRATE_FAST>;

    xw12a: xw12a@42 {
		compatible = "xinwang,xw12a";
		reg = <0x42>;
		int-gpios = <&gpio1 6 GPIO_ACTIVE_LOW>;
    };


};

// ws2812 专用 pin 口
&spi3 { 
    compatible = "nordic,nrf-spim";
    status = "okay";
    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

    /delete-property/ sck-pin;      /* WS2812 不需要时钟线 */
    /delete-property/ miso-pin;     /* WS2812 不需要输入线 */
    
    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-spi";
        reg = <0>;
        spi-max-frequency = <4000000>;
        spi-one-frame = <0x70>; 
        spi-zero-frame = <0x40>; 
        
        /* 修改这里：支持 4 颗灯串联 */
        chain-length = <4>; 
        
        color-mapping = <LED_COLOR_ID_GREEN LED_COLOR_ID_RED LED_COLOR_ID_BLUE>;
    };
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x00000000 0x0000c000>;
        };

        slot0_partition: partition@c000 {
            label = "image-0";
            reg = <0x0000c000 0x000e0000>;
        };

        storage_partition: partition@ec000 {
            label = "storage";
            reg = <0x000ec000 0x00014000>;
        };
    };
};

